<%= form_with scope: :group_task, url: group_tasks_path, local: true do |form| %>  
<p>
    <%= form.label :Title %>
    <%= form.text_field :title, required:true %>  
     <h2></h2>  
<%= form.label :details %>
    <%= form.text_area :body, required:true %>
  <h2></h2>
<%= form.label :'person in charge' %>
    <%= form.select :user_email, User.pluck(:email), required:true %>
   
  <h2></h2>
    <%= form.label :'Task Completed?' %>
    <%= form.check_box :status%>
  </p>
 
 <div class="btn btn-success">
             <%= form.submit :class=>"btn" %>
   </div> 

<% end%>
 <%= link_to 'Back', group_tasks_path %>
